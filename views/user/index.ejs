						<li><a href="#"><span class="fa fa-user"></span> People</a></li>
						<li class="active"><a href="#"><span class="icon-chat"></span> Chat</a></li>
						<li><a href="#"><span class="fa fa-inbox"></span> Files</a></li>
						<li><a href="#"><span class="fa fa-check-circle"></span> Tasks</a></li>
					</ul>
				</nav>
				<!-- /tabs -->
				<!-- user profile -->
				<section class="user-profile">
